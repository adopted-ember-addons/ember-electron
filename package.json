{
  "name": "ember-electron",
  "version": "3.0.0-beta.3",
  "description": "An addon for building Desktop apps with Ember and Electron.",
  "keywords": [
    "atom",
    "chromium",
    "electron",
    "ember-addon"
  ],
  "homepage": "https://ember-electron.js.org",
  "bugs": {
    "url": "https://github.com/adopted-ember-addons/ember-electron/issues"
  },
  "repository": "https://github.com/adopted-ember-addons/ember-electron.git",
  "license": "MIT",
  "author": {
    "name": "Felix Rieseberg",
    "email": "felix@felixrieseberg.com",
    "url": "http://www.felixrieseberg.com"
  },
  "contributors": [
    {
      "name": "Aidan Nulman",
      "email": "aidan@isleofcode.com",
      "url": "https://isleofcode.com"
    },
    {
      "name": "Florian Pichler",
      "url": "http://ylk.gd/"
    },
    {
      "name": "Ben Demboski",
      "email": "ben@turbopatent.com",
      "url": "https://github.com/bendemboski"
    }
  ],
  "directories": {
    "doc": "doc",
    "test": "tests"
  },
  "scripts": {
    "lint": "npm-run-all --aggregate-output --continue-on-error --parallel lint:*",
    "lint:hbs": "ember-template-lint .",
    "lint:js": "eslint .",
    "release": "release-it",
    "test": "npm-run-all lint:* test:electron",
    "test:electron": "yarn test-fast && yarn test-slow",
    "test:ember": "ember test",
    "test:ember-compatibility": "ember try:each",
    "test-fast": "mocha node-tests/integration/**/*.js node-tests/unit/**/*.js",
    "test-slow": "mocha node-tests/acceptance/**/*.js"
  },
  "dependencies": {
    "@electron-forge/core": "6.0.0-beta.52",
    "broccoli-string-replace": "^0.1.2",
    "chalk": "^4.0.0",
    "debug": "^4.1.1",
    "ember-cli-babel": "^7.19.0",
    "ncp": "^2.0.0",
    "portfinder": "^1.0.25",
    "rimraf": "^3.0.2",
    "silent-error": "^1.1.1",
    "tree-kill": "^1.2.2",
    "yawn-yaml": "^1.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-0",
    "@ember/optional-features": "^1.3.0",
    "@glimmer/component": "^1.0.0",
    "@glimmer/tracking": "^1.0.0",
    "babel-eslint": "^10.1.0",
    "broccoli-asset-rev": "^3.0.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "console-ui": "^3.1.1",
    "ember-auto-import": "^1.5.3",
    "ember-cli": "~3.18.0",
    "ember-cli-addon-docs": "^0.7.0",
    "ember-cli-addon-docs-yuidoc": "^0.2.4",
    "ember-cli-dependency-checker": "^3.2.0",
    "ember-cli-deploy": "^1.0.2",
    "ember-cli-deploy-build": "^2.0.0",
    "ember-cli-deploy-git": "^1.3.4",
    "ember-cli-deploy-git-ci": "^1.0.1",
    "ember-cli-htmlbars": "^5.0.0",
    "ember-cli-inject-live-reload": "^2.0.2",
    "ember-cli-sass": "^10.0.1",
    "ember-cli-sri": "^2.1.1",
    "ember-cli-uglify": "^3.0.0",
    "ember-disable-prototype-extensions": "^1.1.3",
    "ember-export-application-global": "^2.0.1",
    "ember-load-initializers": "^2.1.1",
    "ember-qunit": "^4.6.0",
    "ember-resolver": "^8.0.0",
    "ember-source": "~3.20.1",
    "ember-source-channel-url": "^2.0.1",
    "ember-template-lint": "^2.6.0",
    "ember-try": "^1.4.0",
    "eslint": "^7.0.0",
    "eslint-plugin-ember": "^8.4.0",
    "eslint-plugin-node": "^11.1.0",
    "execa": "^4.0.0",
    "fs-extra": "^9.0.0",
    "loader.js": "^4.7.0",
    "mocha": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "qunit-dom": "^1.2.0",
    "release-it": "^13.5.7",
    "release-it-lerna-changelog": "^2.3.0",
    "sass": "^1.26.5",
    "sinon": "^9.0.2",
    "sinon-chai": "^3.5.0",
    "tmp": "^0.2.1"
  },
  "peerDependencies": {
    "ember-cli": "^3.4.0",
    "ember-cli-dependency-checker": "^3.1.0"
  },
  "engines": {
    "node": "10.* || >= 12"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "ember": {
    "edition": "octane"
  },
  "ember-addon": {
    "defaultBlueprint": "ember-electron",
    "versionCompatibility": {
      "ember": ">=2.3.0"
    },
    "after": [
      "ember-cli-sri",
      "ember-engines"
    ]
  },
  "release-it": {
    "plugins": {
      "release-it-lerna-changelog": {
        "infile": "CHANGELOG.md"
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    }
  }
}
